@page
@model RealEstate.Pages.AccountDetailsModel
@{
}

<style>

    .column {
        float: left;
        padding: 5px;
        padding-top: 50px
        height: 300px; /* Should be removed. Only for demonstration */
    }

    .left {
        width: 65%;
    }

    .right {
        width: 35%;
    }
    
    .l2 {
        width: 15%
    }
    
    .r2 {
        width: 85%
    }
    
    .formCol {
        float: left;
        padding: 5px;
        height: 75px;
        width: 50%
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    
    .border {
        border-style: solid;
        border-radius: 12px;
    }

</style>

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="row">
    <div class="column left" style="border-right-style: solid; border-color: grey">
        <div class="row" style="height: 100px;">  
            <div class="column l2">
                <img class="border" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Avatar" style="width:100px">
            </div>
            <div class="column r2" style="padding-left: 10px">
                <h1>Welcome to Group7Estates, Jane Doe!</h1>
            </div>
            </div>
        
        <div class="row" style="padding-top: 30px">
            <div class="row">
                <div class="formCol">
                    <p>First Name</p>
                    <input type="text" placeholder="Jane"/>
                </div>
                <div class="column formCol">
                    <p>Last Name</p>
                    <input type="text" placeholder="Doe" />
                </div>
            </div>
            <div class="row">
                <div class="formCol">
                    <p>Email</p>
                    <input type="text" placeholder="jane.doe@gmail.com" />
                </div>
                <div class="formCol">
                    <p>Password</p>
                    <input type="text" placeholder="********" />
                </div>
            </div>
            <div class="row">
                <div class="formCol">
                    <p>Current Address</p>
                    <input type="text" placeholder="1 Market St." />
                </div>
                <div class="formCol">
                    <p>Postal Code</p>
                    <input type="text" placeholder="M5E 0A2" />
                </div>
            </div>
            <div class="row">
                <div class="formCol">
                    <p>Province</p>
                    <select name="province">
                        <option value="ontario">Ontario</option>
                        <option value="quebec">Quebec</option>
                    </select>
                </div>
                <div class="formCol">
                    <p>Date of Birth</p>
                    <input type="date"/>
                </div>
            </div>
            <div class="row">
                <div class="formCol" style="padding-top: 25px">
                    <button style="background-color: #1B446F; color: white; border-radius: 8px;">Save</button>
                </div>
                
            </div>
        </div>
    </div>
    <div class="column right" style="padding-left: 20px">
        <h2 style="text-align: center; padding-top: 10px">Membership</h2>
        <h4 style="padding-top: 20px">Current Level:</h4>
        <img src="https://i.ebayimg.com/images/g/VFcAAOxyJX9SKbxA/s-l400.jpg" style="width: 200px"/>
    </div>
</div>